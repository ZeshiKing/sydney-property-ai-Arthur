# 澳洲租房聚合系统后端配置 - Python FastAPI 版本

# 基本设置
ENVIRONMENT=development
DEBUG=true
PORT=3000

# 数据库配置 (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rental_aggregator
DB_USER=postgres
DB_PASSWORD=your_password_here

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Firecrawl API配置
FIRECRAWL_API_KEY=fc-your-api-key-here
FIRECRAWL_BASE_URL=https://api.firecrawl.dev

# 缓存设置
CACHE_TTL_SECONDS=3600
SEARCH_CACHE_TTL=300

# 限流设置
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=10

# CSV导出设置
CSV_EXPORT_DIR=csv_exports
CSV_MAX_FILES=50

# 日志设置
LOG_LEVEL=INFO

# 安全设置 (JWT替换为更通用的SECRET_KEY)
SECRET_KEY=your-secret-key-change-in-production-very-important
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 爬虫设置
SCRAPING_MAX_RETRIES=3
SCRAPING_RETRY_DELAY=2.0
SCRAPING_TIMEOUT=30

# 性能设置
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30

# CORS设置 (多个域名用逗号分隔)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000

# Celery设置 (后台任务，可选)
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0